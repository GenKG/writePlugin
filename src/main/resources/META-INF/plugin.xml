<idea-plugin>
    <id>com.writePlugin.writePlugin</id>
    <name>WritePlugin</name>
    <vendor email="safon0306@gmail.com" url="https://github.com/GenKG/writePlugin">WritePlugin</vendor>

    <description>Плагин позволяет анализировать лексически текст и предлагать варианты его улучшения</description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="HelloWorldClass" class="HelloWorldClass" text="Hello">
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl BACK_SLASH"/>
        </action>
        <action id="EditorBasics.EditorIllustrationAction"
                class="HelloWorldClass"
                text="Editor Replace Text"
                description="Replaces selected text with 'Replacement'."
                icon="SdkIcons.Sdk_default_icon">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>